# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aboutme_auth?schema=public"

# JWT Secret (generate a strong secret for production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# Steam API Configuration
VITE_STEAM_API_KEY=your_steam_api_key_here
VITE_STEAM_ID=your_steam_id_here

# Faceit API Configuration
VITE_FACEIT_API_KEY=your_faceit_api_key_here
VITE_FACEIT_NICK=your_faceit_nickname_here

# Security Configuration
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5

# Feature Flags
ENABLE_GAME_STATS=true
ENABLE_STEAM_API=true
ENABLE_FACEIT_API=true
ENABLE_REAL_TIME_UPDATES=true
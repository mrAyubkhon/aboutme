// Prisma Schema for Authentication System
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password with bcrypt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
